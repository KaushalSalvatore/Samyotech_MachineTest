<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="false"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/emphasis"
            android:scaleType="fitXY">

        </ImageView>

            <RelativeLayout
                android:id="@+id/relative_herat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/circleshape"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/heartyellow"
                    android:layout_centerInParent="true">

                </ImageView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/relative_herat"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp">

                <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/star">
                </ImageView>
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star">
                </ImageView>
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star">
                </ImageView>
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star">

                </ImageView>
                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/stargray">

                </ImageView>


            </LinearLayout>

            <TextView
                android:id="@+id/textview_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_star"
                android:text="Home"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/textview_decription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_home"
                android:text="Home"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                android:textColor="@android:color/black">

            </TextView>

            <LinearLayout
                android:layout_below="@+id/textview_decription"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="$ 23"
                        android:textSize="18dp"
                        android:textColor="@android:color/black"
                        android:paddingLeft="8dp">

                    </TextView>

                    <TextView
                        android:layout_below="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Per night"
                        android:textSize="18dp"
                        android:textColor="@android:color/black"
                        android:paddingLeft="8dp">

                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/tv_guest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="2"
                        android:textSize="18dp"
                        android:textColor="@android:color/black"
                        android:paddingLeft="8dp">

                    </TextView>

                    <TextView
                        android:layout_below="@+id/tv_guest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guests max"
                        android:textSize="18dp"
                        android:textColor="@android:color/black"
                        android:paddingLeft="8dp">

                    </TextView>


                </RelativeLayout>

            </LinearLayout>



        </RelativeLayout>




    </androidx.cardview.widget.CardView>



</RelativeLayout>